# all values are defaults
[common]
local = false # connect to/host server via loopback
mode = "client" # client / server / lobby / debug
port = 7420 # client and game server ports
lobby_port = 7600 # client and lobby server ports
lobby_token = "" # token required to connect to lobby

[client]
name = "fops" # user id
framerate_cap = 120
server = "127.0.0.1" # server address, connect on start unless lobby is specified
lobby = "127.0.0.1" # lobby address
lobby_token = ""

[server]
players = 2
radius = 16 # map radius
# seed = 0 # random unless specified

[lobby]
game_ports = "7420-7500"
